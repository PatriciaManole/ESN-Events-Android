<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2e3192"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewRockOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are the change!"
        android:textColor="#2e3192"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dear Erasmus Generation, thanks for letting us be part of your new chapter in Bucharest!"
        android:textColor="#2e3192"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/esnstar_colour"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See you soon"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2e3192"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"/>



</FrameLayout>